					"data": {
						"type": "object"
					},
					"message": {
						"type": "string"
					}
				}
			},
			"ErrorSchemaResponse": {
				"properties": {
					"error": {
						"type": "string"
					},
					"message": {
						"type": "string"
					}
				}
			},
			"CreateDIDSchemaBody": {
				"required": ["domain"],
				"properties": {
					"domain": {
						"type": "string",
						"example": "dev.smartproof.in"
					}
				}
			},
			"OnBoardGaiaXSchemaBody": {
