{
	"openapi": "3.0.1",
	"info": {
		"title": "REST API for SmartSense Gaia-X Singer Tool",
		"version": "1.0.0"
	},
	"schemes": ["http"],
	"servers": [{ "url": "http://localhost:8000/" }],
	"paths": {
		"/createWebDID": {
			"post": {
				"summary": "Create Web DID",
				"description": "Required domain name to create did:web",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CreateDIDSchemaBody"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessSchemaResponse"
								}
							}
						}
					},
					"422": {
						"description": "Validation Error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					},
					"500": {
						"description": "Internal server error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					}
				}
			}
		},

		"/onBoardToGaiaX": {
			"post": {
				"summary": "On board to Gaia-X",
				"description": "Generate Legal Person and Service Offer Credentials",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/OnBoardGaiaXSchemaBody"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessSchemaResponse"
								}
							}
						}
					},
					"500": {
						"description": "Internal server error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					}
				}
			}
		},
		"/createVC": {
			"post": {
				"summary": "Create verifiable credential",
				"description": "Generate verifiable credential along with proof",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CreateVCSchemaBody"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessSchemaResponse"
								}
							}
						}
					},
					"422": {
						"description": "Validation Error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					},
					"500": {
						"description": "Internal server error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					}
				}
			}
		},
		"/createVP": {
			"post": {
				"summary": "Create a Verifiable Presentation",
				"description": "Generate Legal Person, Service Offering or Compliance Credential VP ",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CreateVPSchemaBody"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessSchemaResponse"
								}
							}
						}
					},
					"422": {
						"description": "Validation Error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					},
					"500": {
						"description": "Internal server error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					}
				}
			}
		},
		"/verifySignature": {
			"post": {
				"summary": "Verify proof of a VC or a VP",
				"description": " Validate Signature of VC or VP ",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/VerifySigSchemaBody"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/SuccessSchemaResponse"
								}
							}
						}
					},
					"422": {
						"description": "Validation Error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					},
					"500": {
						"description": "Internal server error",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/ErrorSchemaResponse"
								}
							}
						}
					}
				}
			}
		}
	},
